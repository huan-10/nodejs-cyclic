<div class="mt-4 container">
    <h3>Cập nhật khóa học</h3>

    <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group mt-4">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}"
                id="name"
                name="name" required>
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control"
                id="description"
                name="description" required>{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}"
                id="videoId"
                name="videoId" required>
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}"
                id="level"
                name="level" required>
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
